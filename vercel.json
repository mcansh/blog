{
  "github": {
    "enabled": false
  },
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["remix.config.js", "app-build/**/*"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/rss",
      "destination": "/api/rss.ts"
    },
    {
      "source": "/atom",
      "destination": "/api/atom.ts"
    },
    {
      "source": "/feed.json",
      "destination": "/api/feed.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/build/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31540000000"
        }
      ]
    }
  ]
}
