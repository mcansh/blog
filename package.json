{
  "name": "@mcansh/blog",
  "version": "3.24.0",
  "description": "",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "repository": "mcansh/blog",
  "homepage": "https://mcansh.blog",
  "engines": {
    "node": ">=14.x"
  },
  "sideEffects": false,
  "scripts": {
    "dev:remix": "remix dev",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch --postcss",
    "dev": "run-p dev:*",
    "prebuild": "npm run clean",
    "build:css": "tailwindcss -o ./app/styles/tailwind.css --minify --postcss",
    "build:remix": "remix build",
    "build": "run-s build:*",
    "lint": "eslint --ignore-path .gitignore --fix --cache --ext js,ts,tsx,mdx,md .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "type-check": "tsc",
    "validate": "npm-run-all --parallel lint format type-check test",
    "postinstall": "husky install .config/husky && remix setup",
    "clean": "del .cache app/styles server/build public/build"
  },
  "dependencies": {
    "@remix-run/node": "1.1.3",
    "@remix-run/react": "1.1.3",
    "@remix-run/vercel": "1.1.3",
    "fathom-client": "3.4.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.1.3",
    "remix-utils": "2.5.0",
    "type-fest": "2.11.2"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "4.0.0",
    "@remix-run/dev": "1.1.3",
    "@remix-run/serve": "1.1.3",
    "@types/node": "17.0.17",
    "@types/react": "17.0.39",
    "@types/react-dom": "17.0.11",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "del-cli": "4.0.1",
    "eslint": "8.9.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.6",
    "postcss-100vh-fix": "1.0.2",
    "prettier": "2.5.1",
    "tailwindcss": "3.0.22",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|mjs|cjs)": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.+(json|yml|yaml|css|less|scss|md|graphql|mdx)": [
      "prettier --write"
    ]
  }
}
