{
  "name": "blog",
  "productName": "Logan McAnsh",
  "productShortName": "Blog",
  "version": "3.23.0",
  "private": false,
  "description": "My blog for learn.co, but mostly it's a playground for things I want to build with React ü§∑‚Äç‚ôÇÔ∏è",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "repository": "mcansh/blog",
  "homepage": "https://mcansh.blog",
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "dev": "next",
    "build:next": "next build",
    "build:files": "node ./.next/serverless/scripts/build-files.js",
    "build": "npm-run-all build:*",
    "start": "next start",
    "test": "TZ=utc NODE_ENV=test jest",
    "lint:css": "stylelint './**/*.js' './**/*.jsx' './**/*.tsx' './**/*.ts'",
    "lint": "eslint ./ --ext js,ts,tsx --fix",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "analyze": "ANALYZE=true yarn build",
    "type-check": "tsc",
    "update-mdx-meta": "node scripts/update-mdx-meta",
    "validate": "npm-run-all --parallel lint format lint:css type-check test"
  },
  "dependencies": {
    "@formatjs/intl-pluralrules": "1.5.8",
    "@formatjs/intl-relativetimeformat": "4.5.15",
    "@mcansh/next-nprogress": "1.1.2",
    "@next/bundle-analyzer": "9.4.0",
    "@next/plugin-sentry": "9.3.6",
    "@reach/portal": "0.10.1",
    "body-scroll-lock": "3.0.2",
    "date-fns": "2.13.0",
    "framer-motion": "1.10.3",
    "intl": "1.2.5",
    "mdx-utils": "0.2.0",
    "next": "9.4.0",
    "next-mdx-enhanced": "2.5.0",
    "nprogress": "0.2.0",
    "polished": "3.6.2",
    "prism-react-renderer": "1.1.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-ink": "6.4.0",
    "react-simple-img": "2.3.9",
    "somebody": "2.0.0",
    "styled-components": "5.1.0",
    "type-fest": "0.13.1"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "2.6.1",
    "@svgr/webpack": "5.4.0",
    "@testing-library/jest-dom": "5.7.0",
    "@testing-library/react": "10.0.4",
    "@types/body-scroll-lock": "2.6.1",
    "@types/jest": "25.2.1",
    "@types/jest-in-case": "1.0.2",
    "@types/node": "13.13.5",
    "@types/nprogress": "0.2.0",
    "@types/prettier": "2.0.0",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.8",
    "@types/styled-components": "5.1.0",
    "@typescript-eslint/eslint-plugin": "2.32.0",
    "@typescript-eslint/parser": "2.32.0",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "babel-plugin-import-glob-array": "0.2.0",
    "babel-plugin-styled-components": "1.10.7",
    "eslint": "7.0.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-kentcdodds": "14.11.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.9.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "4.0.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "6.10.0",
    "git-jiggy": "1.1.1",
    "globby": "11.0.0",
    "gray-matter": "4.0.2",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "jest-in-case": "1.0.2",
    "jest-styled-components": "7.0.2",
    "lint-staged": "10.2.2",
    "next-offline": "5.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "stylelint": "13.3.3",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-prettier": "1.1.2",
    "stylelint-processor-styled-components": "1.10.0",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "yarn run update-mdx-meta post-commit"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write",
      "yarn lint:css",
      "yarn test --bail --findRelatedTests"
    ],
    "*.+(json|yml|yaml|css|less|scss|md|graphql|mdx)": [
      "prettier --write"
    ]
  }
}
