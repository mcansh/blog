{
  "name": "@mcansh/blog",
  "version": "3.24.0",
  "description": "",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "repository": "mcansh/blog",
  "homepage": "https://mcansh.blog",
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "dev": "pm2-dev pm2.config.js",
    "build": "remix build",
    "test": "TZ=utc NODE_ENV=test jest",
    "lint": "eslint --ignore-path .gitignore --fix --cache --ext js,ts,tsx,mdx,md .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "type-check": "tsc --project app",
    "validate": "npm-run-all --parallel lint format type-check test",
    "postinstall": "husky install .config/husky"
  },
  "dependencies": {
    "@badrap/bar-of-progress": "0.1.2",
    "@mdx-js/react": "1.6.22",
    "@remix-run/cli": "0.13.1",
    "@remix-run/core": "0.13.1",
    "@remix-run/data": "0.13.1",
    "@remix-run/express": "0.13.1",
    "@remix-run/react": "0.13.1",
    "@remix-run/vercel": "0.13.1",
    "body-scroll-lock": "3.1.5",
    "date-fns": "2.17.0",
    "fathom-client": "3.0.0",
    "feed": "4.2.2",
    "mdx-bundler": "1.1.3",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router": "6.0.0-beta.0",
    "react-router-dom": "6.0.0-beta.0",
    "type-fest": "0.21.1"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "3.0.1",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@types/body-scroll-lock": "2.6.1",
    "@types/jest": "26.0.20",
    "@types/jest-in-case": "1.0.3",
    "@types/mdx-js__react": "1.5.3",
    "@types/node": "14.14.30",
    "@types/prettier": "2.2.1",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "@typescript-eslint/parser": "4.15.1",
    "autoprefixer": "10.2.4",
    "eslint": "7.20.0",
    "husky": "5.0.9",
    "jest": "26.6.3",
    "jest-in-case": "1.0.2",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "pm2": "4.5.4",
    "prettier": "2.2.1",
    "tailwindcss": "2.0.3",
    "typescript": "4.1.5"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write",
      "yarn test --bail --findRelatedTests"
    ],
    "*.+(json|yml|yaml|css|less|scss|md|graphql|mdx)": [
      "prettier --write"
    ]
  }
}
