{
  "name": "@mcansh/blog",
  "version": "3.24.0",
  "description": "",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "repository": "mcansh/blog",
  "homepage": "https://mcansh.blog",
  "engines": {
    "node": ">=14.x"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "pm2-dev pm2.config.js",
    "prebuild": "npm run clean",
    "build": "run-s build:*",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "test": "TZ=utc NODE_ENV=test jest",
    "lint": "eslint --ignore-path .gitignore --fix --cache --ext js,ts,tsx,mdx,md .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "type-check": "tsc --project app",
    "validate": "npm-run-all --parallel lint format type-check test",
    "postinstall": "husky install .config/husky",
    "clean": "del app/styles build public/build"
  },
  "dependencies": {
    "@badrap/bar-of-progress": "0.1.2",
    "@remix-run/node": "0.17.5",
    "@remix-run/react": "0.17.5",
    "@remix-run/vercel": "0.17.5",
    "@ryanflorence/md": "3.0.5",
    "body-scroll-lock": "3.1.5",
    "date-fns": "2.22.1",
    "fathom-client": "3.0.0",
    "feed": "4.2.2",
    "framer-motion": "4.1.17",
    "gray-matter": "4.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router": "6.0.0-beta.0",
    "react-router-dom": "6.0.0-beta.0",
    "remix": "0.17.5",
    "remix-utils": "1.0.2",
    "type-fest": "1.2.2"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "3.1.0",
    "@remix-run/dev": "0.17.5",
    "@tailwindcss/aspect-ratio": "0.2.1",
    "@tailwindcss/forms": "0.3.3",
    "@tailwindcss/typography": "0.4.1",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@types/body-scroll-lock": "2.6.2",
    "@types/jest": "26.0.24",
    "@types/jest-in-case": "1.0.5",
    "@types/node": "16.3.1",
    "@types/prettier": "2.3.2",
    "@types/react": "17.0.14",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "@vercel/node": "1.11.1",
    "autoprefixer": "10.2.6",
    "cssnano": "5.0.6",
    "del-cli": "4.0.0",
    "esjest-transform": "0.0.4",
    "eslint": "7.30.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "jest-in-case": "1.0.2",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "pm2": "5.1.0",
    "postcss-cli": "8.3.1",
    "postcss-nested": "5.0.5",
    "prettier": "2.3.2",
    "tailwindcss": "2.2.4",
    "ts-jest": "27.0.3",
    "typescript": "4.3.5"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write",
      "yarn test --bail --findRelatedTests"
    ],
    "*.+(json|yml|yaml|css|less|scss|md|graphql|mdx)": [
      "prettier --write"
    ]
  }
}
