{
  "name": "@mcansh/blog",
  "version": "3.24.0",
  "description": "",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "repository": "mcansh/blog",
  "homepage": "https://mcansh.blog",
  "engines": {
    "node": ">=14.x"
  },
  "sideEffects": false,
  "scripts": {
    "dev": "pm2-dev pm2.config.js",
    "prebuild": "npm run clean",
    "build": "run-s build:*",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "lint": "eslint --ignore-path .gitignore --fix --cache --ext js,ts,tsx,mdx,md .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "type-check": "tsc",
    "validate": "npm-run-all --parallel lint format type-check test",
    "postinstall": "husky install .config/husky && remix setup",
    "clean": "del .cache app/styles server/build public/build"
  },
  "dependencies": {
    "@remix-run/node": "0.18.2",
    "@remix-run/react": "0.18.2",
    "@remix-run/vercel": "0.18.2",
    "fathom-client": "3.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router": "6.0.0-beta.6",
    "react-router-dom": "6.0.0-beta.6",
    "remix": "0.18.2",
    "remix-utils": "1.0.2",
    "type-fest": "2.3.4"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "3.1.0",
    "@remix-run/dev": "0.18.2",
    "@tailwindcss/aspect-ratio": "0.3.0",
    "@tailwindcss/forms": "0.3.4",
    "@tailwindcss/typography": "0.4.1",
    "@types/node": "16.10.3",
    "@types/react": "17.0.27",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "@vercel/node": "1.12.1",
    "autoprefixer": "10.3.7",
    "cssnano": "5.0.8",
    "del-cli": "4.0.1",
    "eslint": "7.32.0",
    "husky": "7.0.2",
    "lint-staged": "11.2.0",
    "npm-run-all": "4.1.5",
    "pm2": "5.1.2",
    "postcss-100vh-fix": "1.0.2",
    "postcss-cli": "9.0.1",
    "postcss-nested": "5.0.6",
    "prettier": "2.4.1",
    "tailwindcss": "2.2.16",
    "typescript": "4.4.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|mjs|cjs)": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.+(json|yml|yaml|css|less|scss|md|graphql|mdx)": [
      "prettier --write"
    ]
  }
}
