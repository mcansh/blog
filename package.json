{
  "name": "mcansh-blog",
  "productName": "Logan McAnsh",
  "productShortName": "Blog",
  "version": "3.1.18",
  "private": false,
  "description": "My blog for learn.co",
  "repository": "git@github.com:mcansh/blog.git",
  "homepage": "https://mcansh.blog",
  "scripts": {
    "dev": "next",
    "dev:server": "nodemon -r @std/esm server",
    "build": "next build",
    "webp": "node convertToWebp.js",
    "start": "node -r @std/esm server",
    "lint": "eslint ./",
    "test": "bundlesize && yarn lint",
    "predeploy": "yarn webp",
    "deploy": "now --docker",
    "postdeploy": "now alias"
  },
  "precommit": "lint",
  "now": {
    "name": "blog",
    "alias": "mcansh.blog",
    "dotenv": "variables.env"
  },
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "dependencies": {
    "@std/esm": "^0.19.7",
    "babel-plugin-inline-dotenv": "^1.1.1",
    "date-fns": "^2.0.0-alpha.7",
    "highlight.js": "^9.12.0",
    "markdown-in-js": "^1.1.3",
    "next": "^4.4.0-canary.3",
    "nprogress": "^0.2.0",
    "polka": "^0.2.3",
    "prop-types": "^15.6.0",
    "raven-js": "^3.22.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-syntax-highlighter": "^6.1.2",
    "sw-precache-webpack-plugin": "^0.11.4",
    "webpack": "^3.10.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "bundlesize": "^0.15.3",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react": "^7.5.1",
    "file-type": "^7.4.0",
    "nodemon": "^1.14.11",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2",
    "read-chunk": "^2.1.0",
    "webp-converter": "^2.1.6"
  },
  "@std/esm": {
    "esm": "js",
    "cjs": true
  },
  "bundlesize": [
    {
      "path": "./pages/**/*.js"
    }
  ],
  "nodemon": {
    "watch": "server.js"
  }
}
