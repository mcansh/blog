{
  "name": "blog",
  "productName": "Logan McAnsh",
  "productShortName": "Blog",
  "version": "3.24.0",
  "private": false,
  "description": "My blog for learn.co, but mostly it's a playground for things I want to build with React ü§∑‚Äç‚ôÇÔ∏è",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh)",
  "license": "MIT",
  "repository": "mcansh/blog",
  "homepage": "https://mcansh.blog",
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "dev": "next",
    "dev:watch": "next-remote-watch ./_posts",
    "build:next": "next build",
    "build:files": "node ./.next/serverless/scripts/build-files.js",
    "postbuild": "next-sitemap",
    "build": "npm-run-all build:*",
    "start": "next start",
    "test": "TZ=utc NODE_ENV=test jest",
    "lint:css": "stylelint './**/*.js' './**/*.jsx' './**/*.tsx' './**/*.ts'",
    "lint": "eslint --ignore-path .gitignore --fix --cache --ext js,ts,tsx .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)\"",
    "analyze": "ANALYZE=true yarn build",
    "type-check": "tsc",
    "update-mdx-meta": "node scripts/update-mdx-meta",
    "validate": "npm-run-all --parallel lint format lint:css type-check test",
    "find:unused": "next-unused"
  },
  "dependencies": {
    "@badrap/bar-of-progress": "0.1.2",
    "@mcansh/next-svgr": "1.2.0",
    "@next/bundle-analyzer": "10.0.6",
    "@next/plugin-sentry": "10.0.6",
    "@plaiceholder/blurhash": "1.0.0",
    "@plaiceholder/next": "1.0.0",
    "@reach/portal": "0.13.0",
    "@svgr/webpack": "5.5.0",
    "body-scroll-lock": "3.1.5",
    "date-fns": "2.16.1",
    "fathom-client": "3.0.0",
    "feed": "4.2.2",
    "framer-motion": "3.2.1",
    "gray-matter": "4.0.2",
    "mdx-utils": "0.2.0",
    "next": "10.0.6",
    "next-mdx-remote": "2.1.3",
    "next-seo": "4.18.0",
    "next-sitemap": "1.4.15",
    "polished": "4.1.0",
    "prism-react-renderer": "1.1.1",
    "react": "17.0.1",
    "react-blurhash": "0.1.3",
    "react-dom": "17.0.1",
    "react-ink": "6.4.0",
    "sharp": "0.27.1",
    "somebody": "2.0.0",
    "styled-components": "5.2.1",
    "type-fest": "0.20.2"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "3.0.1",
    "@next/eslint-plugin-next": "10.0.6",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.3",
    "@types/body-scroll-lock": "2.6.1",
    "@types/file-type": "10.9.1",
    "@types/jest": "26.0.20",
    "@types/jest-in-case": "1.0.3",
    "@types/node": "14.14.22",
    "@types/prettier": "2.1.6",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/sharp": "0.27.1",
    "@types/styled-components": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "babel-plugin-import-glob-array": "0.2.0",
    "babel-plugin-styled-components": "1.12.0",
    "eslint": "7.19.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-kentcdodds": "17.3.2",
    "eslint-config-prettier": "7.2.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "6.10.0",
    "git-jiggy": "1.1.1",
    "globby": "11.0.2",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "jest-in-case": "1.0.2",
    "jest-styled-components": "7.0.3",
    "lint-staged": "10.5.3",
    "next-offline": "5.0.3",
    "next-remote-watch": "0.3.0",
    "next-unused": "0.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "stylelint": "13.9.0",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-prettier": "1.1.2",
    "stylelint-processor-styled-components": "1.10.0",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "yarn run update-mdx-meta post-commit"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write",
      "yarn lint:css",
      "yarn test --bail --findRelatedTests"
    ],
    "*.+(json|yml|yaml|css|less|scss|md|graphql|mdx)": [
      "prettier --write"
    ]
  },
  "next-unused": {
    "alias": {
      "~/": "./"
    },
    "include": [
      "components",
      "pages",
      "utils"
    ],
    "exclude": [],
    "entrypoints": [
      "pages"
    ]
  }
}
